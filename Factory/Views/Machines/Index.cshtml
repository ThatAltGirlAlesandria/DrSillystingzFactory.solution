@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <p>Error, no machines have been purchased. Machine must be purchased in order to add the machine's details to the system.</p>
} 
else
{
  <ul>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.MachineName}", "Details", new {id = machine.MachineId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add New Machine", "Create")</p>
<p>@Html.ActionLink("View Machines", "Create")</p>
<p>@Html.ActionLink("View Both Engineers and Machines", "Index", "Home")</p>