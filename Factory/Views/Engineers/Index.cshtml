@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>Error, you haven't hired any engineers yet! Engineer's must be hired in order for you to add the Engineer's details to the system.</h3>
} 
else
{
  <ul>
    @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add New Engineer", "Create")</p>
<p>@Html.ActionLink("View Engineers", "Create")</p>
<p>@Html.ActionLink("View Both Engineers and Machines", "Index", "Home")</p>