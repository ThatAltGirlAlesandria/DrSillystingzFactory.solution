@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Assign a Engineer to a Machine:</h2>

<p>Please add a Engineer to this Machine: @Html.DisplayFor(model => model.MachineName)</p>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)
    @Html.Label("Select Engineer")
    @Html.DropDownList("EngineerId")
    <input type="submit" value="save" />
}

<p>@Html.ActionLink("Machine list", "Index")</p>